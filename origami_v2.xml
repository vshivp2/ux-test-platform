 <!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Origami v2 Test Suite">

    <parameter name="runEnv" value="local"></parameter>
    <parameter name="travis" value="on"></parameter>

    <!-- For Desktop -->
    <parameter name="desktop" value="on"></parameter><!-- Set the tests to run Desktop -->
    <parameter name="platform" value="OS X 10.11"></parameter><!-- MAC or Windows -->
    <parameter name="sauceBrowser" value="chrome"></parameter><!-- browser on sauce machine, eg. safari, chrome, ie -->
    <parameter name="sauceBrowserVer" value="48.0"></parameter><!-- browser version on sauce machine -->
    <parameter name="localBrowser" value="firefox"></parameter><!-- browser on your local. eg firefox -->

    <!-- For Mobile -->
    <parameter name="mobile" value="off"></parameter><!-- set the tests to run on mobile devices -->
    <parameter name="appiumDriver" value="android"></parameter> <!-- appium driver - iosDriver or Android Driver -->
    <parameter name="mobDeviceName" value="Google Nexus 7 HD Emulator"></parameter><!-- Android or iOS : iPhone 6 Plus/iPad Air/ iPad Pro -->
    <parameter name="mobilePlatformVer" value="4.4"></parameter><!-- mobile OS version -->
    <parameter name="mobBrowser" value="Browser"></parameter><!-- browser eg.safari, chrome -->
    <parameter name="appiumVer" value="1.5.2"></parameter><!-- version of appium on sauce -->

    <test name="origamiV2Tests">
        <groups>
            <run>
                <include name="desktop-ci"/>
            </run>
        </groups>
        <classes>
            <class name="origamiV2Tests.AppHeaderTest"/>
            <class name="origamiV2Tests.ContextualHelpTest"/>
            <class name="origamiV2Tests.ComponentArchetypeTest"/>
        </classes>
    </test>
</suite>

